// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// --- MODELS ---

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   // SQLite không hỗ trợ Enum, dùng String: "ADMIN", "TEACHER", "EMPLOYER"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  teacherProfile  TeacherProfile?
  employerProfile EmployerProfile?
}

model TeacherProfile {
  id          String   @id @default(uuid())
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
  
  fullName    String
  phone       String
  cvUrl       String?
  experience  String
  
  applications Application[]
}

model EmployerProfile {
  id             String   @id @default(uuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id])
  
  companyName    String
  
  // Logic gói cước (Dùng String thay vì Enum)
  tier           String   @default("FREE") // "FREE" hoặc "PAID"
  planExpiryDate DateTime? 
  
  jobs           JobPost[]
}

model JobPost {
  id           String        @id @default(uuid())
  employerId   String
  employer     EmployerProfile @relation(fields: [employerId], references: [id])
  
  title        String
  salary       String
  createdAt    DateTime      @default(now())
  
  applications Application[]
}

model Application {
  id        String   @id @default(uuid())
  jobId     String
  job       JobPost  @relation(fields: [jobId], references: [id])
  
  teacherId String
  teacher   TeacherProfile @relation(fields: [teacherId], references: [id])
  
  appliedAt DateTime @default(now())
}
